---
import "../css/global.css"
---
<div class="slider">
    <figure class="prev" id="previous">
        <img class="img--large" src="/arrow-prev.svg" alt="icono atras">
    </figure>

    <div class="slider__container">
        <figure class="figure">
            <img class="img--large img--cover" name="img">
        </figure>
        
    </div>

    <figure class="next" id="next">
        <img class="img--large" src="/arrow-next.svg" alt="icono siguiente">
    </figure>

</div>

<style>
    .slider{
        width: 50%;
        height: 40rem;
        display: grid;
        grid-template-columns: 10% 80% 10%;
        grid-template-rows: 100%;
        place-items: center;
        margin: 8rem auto 8rem;
    }
    .prev , .next{
        grid-row: 1;     
        width: 85%;
        height: 7rem;
        background-color: var(--black);
        opacity: 0.90;
        cursor: pointer;
    }
    .prev{
        grid-column: 1;
        z-index: 2;
        margin-left: 1rem;
    }
    .next{
        grid-column: 3;
        z-index: 2;
        margin-right: 1rem;
    }
    .slider__container{
        z-index: 1;
        grid-row: 1;
        grid-column: 1/4;
        height: 100%;
        width: 100%;
        background-color: rgb(35, 85, 35);
    }

    .slider__container .img{
        width: 100%;
        height: 100%;
    }
    .figure{
        width: 100%;
        height: 100%;
    }
</style>

<script>
    
    let images = [
        "/slider-1.jpg",
        "/slider-2.jpg",
    ]

    document.img.src=images[0]

    let prev= document.getElementById("previous");
    let next= document.getElementById("next");
    let contador=0;

    function atras (){
        contador--
        if(contador<0){
            contador=images.length-1
        }
        document.img.src=images[contador]

    }

    function adelante (){
        contador++
        if(contador > images.length - 1){
            contador=0
        }
        document.img.src=images[contador]
    }

    prev.addEventListener("click",atras)
    next.addEventListener("click",adelante)

</script>